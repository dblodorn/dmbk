- $introtitle = get_field('intro_title');
- $introcopy = get_field('intro_copy');
- $intro = get_field('intro', 'option');

- get_header();
main(role="main")
	include ./_includes/header-partial.jade
	include ./_includes/introduction.jade
	- if( have_rows('portfolio_layout') ) :
		- while ( have_rows('portfolio_layout') ) : the_row();
			- if( get_row_layout() == 'intro_block' ) : 
			include ./_includes/intro-block.jade
			- endif
			- if( get_row_layout() == 'portfolio_repeater' ) : 
			include ./_includes/portfolio-repeater.jade
			- endif
		- endwhile
		- else :
	- endif
- get_footer();